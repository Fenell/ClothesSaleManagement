@model List<ClothesSaleManagement.Application.DTOs.Bill.BillDto>
@{
	int count = 1;
}

<table class="table">
	<thead>
	<tr>
		<th scope="col">STT</th>
		<th scope="col">Tên khách hàng</th>
		<th scope="col">SDT</th>
		<th scope="col">Ngày tạo</th>
		<th scope="col">Tổng tiền</th>
		<th scope="col">Xem chi tiết</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<th scope="row">@(count++)</th>
			<td>@item.CustomerName</td>
			<td>@item.PhoneNumber</td>
			<td>@item.CreatedDate</td>
			<td>@item.TotalPayment.ToString("N0")</td>
			<td><a type="button", class="btn btn-dark" asp-action="GetBillDettail" asp-route-billId="@item.Id">Xem chi tiết</a></td>

		</tr>
	}
	</tbody>
</table>