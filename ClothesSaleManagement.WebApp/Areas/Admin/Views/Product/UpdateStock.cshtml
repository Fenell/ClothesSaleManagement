@model ClothesSaleManagement.WebApp.Models.ProductDetailVm

@{
    ViewData["Title"] = "UpdateStock";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>UpdateQuantity</h1>

<h4>ProductDetailVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateStock">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	        <div class="form-group">
		        <label asp-for="Stock" class="control-label">Số lượng cần thêm</label>
		        <input asp-for="Stock" class="form-control" value="0" />
		        <span asp-validation-for="Stock" class="text-danger"></span>
	        </div>
	        <div class="form-group" style="display: none">
		        <input asp-for="ProductId" class="form-control" />
	        </div>
	        <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Update" asp-route-id="@Model.ProductId">Back to List</a>
</div>

