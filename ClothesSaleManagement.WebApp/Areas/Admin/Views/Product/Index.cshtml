@model List<ClothesSaleManagement.WebApp.Models.ProductVM>
@{
	ViewData["Title"] = "Product Manager";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
	int count = 1;
}

<h1>Quản lý sản phẩm</h1>
<h2 class="mb-3">Danh sách sản phẩm</h2>
<a class="btn btn-success mb-3" asp-action="Create">Thêm mới</a>
<table class="table">
	<thead>
		<tr>
			<th scope="col">STT</th>
			<th scope="col">Tên</th>
			<th scope="col">Loại</th>
			<th scope="col">Giá</th>
			<th scope="col">Hình ảnh</th>
			<th scope="col">Thao tác</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@(count++)</td>
				<td>@item.Name</td>
				<td>@item.CategoryDto.Name</td>
				<td style="color: red">@item.Price.ToString("N0")</td>
				
				<td>
					<img src="https://localhost:7198/@item.ImageUrl" style="width: 100px" />
				</td>
				<td>
					<a class="btn btn-primary" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Sửa</a>
					<a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
				</td>
			</tr>
		}
	</tbody>
</table>
