@model List<ClothesSaleManagement.WebApp.Models.ProductVM>
@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center mb-4">
	<h2 class="section-title px-5"><span class="px-2">Sản phẩm nổi bật</span></h2>
</div>
<div class="row px-xl-5 pb-3">
	@foreach (var item in Model)
	{
		<div class="col-lg-3 col-md-6 col-sm-12 pb-1">
			<div class="card product-item border-0 mb-4">
				<div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
					<img class="img-fluid w-100" src="https://localhost:7198/@item.ImageUrl" alt="">
				</div>
				<div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
					<h6 class="text-truncate mb-3">@item.Name</h6>
					<div class="d-flex justify-content-center">
						<h6>@item.Price.ToString("N0")</h6><h6 class="text-muted ml-2"></h6>
					</div>
				</div>
				<div class="card-footer d-flex justify-content-between bg-light border">
					<a class="btn btn-sm text-dark p-0" asp-action="ProductDetail" asp-route-id="@item.Id"><i class="fas fa-eye text-primary mr-1"></i>Xem chi tiết</a>
					<a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng</a>
				</div>
			</div>
		</div>
	}
</div>
